    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.0",
    "nanoid": "^5.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "bun-types": "latest"
