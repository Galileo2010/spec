{
  "name": "spec-assistant-platform",
  "version": "0.1.0",
  "description": "智能规范助手平台 - 面向开发团队的规范管理平台",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch backend/src/index.ts",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "bun build backend/src/index.ts --outdir backend/dist --target bun",
    "build:frontend": "cd frontend && bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t spec-assistant-platform .",
    "docker:run": "docker run -p 3000:3000 spec-assistant-platform"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}